{
  "name": "gotql",
  "version": "1.1.2",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "test": "ava --color -v -T 10000",
    "lint": "standard -v",
    "lint:fix": "standard --fix",
    "report": "cat ./coverage/lcov.info | codecov",
    "build": "./node_modules/.bin/babel -d dist -s true --no-comments src",
    "postinstall": "npm run build",
    "coverage": "nyc --check-coverage --lines 95 --functions 95 --branches 95 --per-file --reporter=lcov --reporter=text --reporter-dir ./coverage --clean --cache --instrument ava"
  },
  "description": "A GraphQL query framework for serverside apps",
  "main": "index.js",
  "repository": "https://github.com/khaosdoctor/gotql.git",
  "bugs": {
    "url": "https://github.com/khaosdoctor/gotql/issues"
  },
  "pre-push": [
    "lint",
    "coverage"
  ],
  "standard": {
    "ignore": [
      "./dist/**/*.*"
    ],
    "globals": [
      "describe",
      "assert",
      "before",
      "beforeAll",
      "after",
      "afterAll"
    ]
  },
  "files": [
    "dist",
    "index.js"
  ],
  "author": "Lucas Santos <lhs.santoss@gmail.com>",
  "license": "MIT",
  "keywords": [
    "graphql",
    "query",
    "framework",
    "serverside",
    "graph",
    "post"
  ],
  "private": false,
  "dependencies": {
    "got": "^8.0.1",
    "prepend-http": "^2.0.0"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "codecov": "^3.0.0",
    "conduct": "^1.0.2",
    "nyc": "^11.3.0",
    "pre-push": "^0.1.1",
    "sinon": "^4.1.2",
    "standard": "^10.0.3"
  }
}
