{
  "name": "gotql",
  "version": "1.8.0",
  "engines": {
    "node": ">=8"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "npm run build:clean && ava --color -v -T 10000",
    "prepare": "npm run build:clean",
    "lint": "standard -v ./src",
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rm -rf dist",
    "build:clean": "npm run clean && npm run build",
    "lint:fix": "standard --fix",
    "report": "cat ./coverage/lcov.info | codecov",
    "coverage": "npm run build:clean && nyc --check-coverage --per-file --reporter=lcov --reporter=text --reporter-dir ./coverage --clean --cache --instrument ava"
  },
  "description": "A GraphQL query framework for serverside apps",
  "main": "dist/index.js",
  "repository": "https://github.com/khaosdoctor/gotql.git",
  "bugs": {
    "url": "https://github.com/khaosdoctor/gotql/issues"
  },
  "pre-commit": [
    "build"
  ],
  "pre-push": [
    "lint",
    "coverage"
  ],
  "ava": {
    "files": [
      "tests/**/*.test.js"
    ]
  },
  "author": "Lucas Santos <lhs.santoss@gmail.com>",
  "license": "MIT",
  "keywords": [
    "graphql",
    "query",
    "framework",
    "serverside",
    "graph",
    "post"
  ],
  "private": false,
  "dependencies": {
    "debug": "^4.1.1",
    "got": "^9.6.0",
    "prepend-http": "^3.0.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/got": "^9.6.10",
    "@types/node": "^13.13.4",
    "ava": "^2.4.0",
    "codecov": "^3.5.0",
    "concurrently": "^4.1.2",
    "conduct": "^2.3.1",
    "nyc": "^14.1.1",
    "pre-push": "^0.1.1",
    "sinon": "^7.5.0",
    "standard": "^14.3.3",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.8.3"
  }
}
